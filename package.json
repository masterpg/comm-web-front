{
  "name": "lived-web-front",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "author": "masterpg",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://masterpg@bitbucket.org/masterpg/lived-web-front.git"
  },
  "scripts": {
    "build:styles": "cpx \"src/styles/*.css\" lib/styles & cpx \"src/styles/**/*.js\" lib/styles & postcss --config postcss.config.js src/styles/base-styles.css --base src --dir lib",
    "watch:styles": "cpx \"src/styles/*.css\" lib/styles --watch & cpx \"src/styles/base-styles.css\" lib/styles --watch --command \"postcss --config postcss.config.js src/styles/base-styles.css --base src --dir lib --watch\" & cpx \"src/styles/**/*.js\" lib/styles --watch",
    "build:ts": "tslint -p tslint.json & tsc --project tsconfig.json --declaration",
    "watch:ts": "tslint -p tslint.json & tsc --project tsconfig.json --declaration --watch",
    "build": "npm run build:styles & npm run build:ts",
    "watch": "npm run watch:styles & npm run watch:ts",
    "dev": "npm run watch & webpack-dev-server --config webpack.dev.config.js",
    "test": "webpack --config webpack.dev.config.js && mocha-chrome dist/test.html"
  },
  "dependencies": {},
  "devDependencies": {
    "@polymer/app-layout": "^3.0.2",
    "@polymer/decorators": "^3.0.0",
    "@polymer/iron-collapse": "^3.0.1",
    "@polymer/iron-flex-layout": "^3.0.1",
    "@polymer/iron-icon": "^3.0.1",
    "@polymer/iron-icons": "^3.0.1",
    "@polymer/iron-pages": "^3.0.1",
    "@polymer/iron-resizable-behavior": "^3.0.1",
    "@polymer/lit-element": "^0.6.5",
    "@polymer/paper-button": "^3.0.1",
    "@polymer/paper-card": "^3.0.1",
    "@polymer/paper-checkbox": "^3.1.0",
    "@polymer/paper-radio-group": "^3.0.1",
    "@polymer/polymer": "~3.0.5",
    "@types/chai": "^4.1.4",
    "@types/lodash": "^4.14.116",
    "@types/mocha": "^5.2.5",
    "@webcomponents/webcomponentsjs": "^2.2.1",
    "animejs": "^2.2.0",
    "autoprefixer": "^9.4.3",
    "chai": "^4.1.2",
    "copy-webpack-plugin": "^4.5.2",
    "cpx": "^1.5.0",
    "html-webpack-plugin": "^3.2.0",
    "lodash": "^4.17.11",
    "mocha": "^5.2.0",
    "mocha-chrome": "^1.1.0",
    "postcss-cli": "^6.0.0",
    "postcss-each": "^0.10.0",
    "postcss-extend": "^1.0.5",
    "postcss-for": "^2.1.1",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-mixins": "^6.2.0",
    "postcss-nesting": "^6.0.0",
    "prettier": "^1.14.2",
    "qs": "github:ljharb/qs",
    "style-loader": "^0.23.0",
    "ts-loader": "^5.1.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.6.0",
    "typescript": "^3.0.3",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8",
    "webpack-merge": "^4.1.4"
  }
}
